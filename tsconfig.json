{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "types/**/*"],
  "ts-node": {
    "files": true
  }
}
